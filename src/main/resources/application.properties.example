spring.application.name=ecommerce

# PostgreSQL Database Configuration
spring.datasource.url={YOUR_DATABASE_URL}
spring.datasource.username={YOUR_DATABASE_USERNAME}
spring.datasource.password={YOUR_DATABASE_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate Configuration
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Connection Pool Configuration
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=20000

# Redis Configuration
spring.data.redis.host={YOUR_REDIS_HOST}
spring.data.redis.port={YOUR_REDIS_PORT}

# JWT Configuration
jwt.secret={YOUR_JWT_SECRET}
jwt.expiration-time.access-token=1800000
jwt.expiration-time.refresh-token=2592000000

# Kuveyt Turk Payment Gateway Configuration
kuveyt.turk.card.check.url=https://boatest.kuveytturk.com.tr/boa.virtualpos.services/Home/ThreeDModelPayGate
kuveyt.turk.pay.url=https://boatest.kuveytturk.com.tr/boa.virtualpos.services/Home/ThreeDModelProvisionGate

# Akbank Payment Configuration
akbank.merchantUser={YOUR_MERCHANT_USER}
akbank.merchantPassword={YOUR_MERCHANT_PASSWORD}
akbank.secretKey={YOUR_SECRET_KEY}
akbank.sale.url={YOUR_SALE_URL}
akbank.securepay.url=https://virtualpospaymentgatewaypre.akbank.com/securepay
akbank.okUrl={YOUR_OK_URL}
akbank.failUrl={YOUR_FAIL_URL}
akbank.lang=TR

# Frontend Configuration
frontend.url={YOUR_FRONTEND_URL}
